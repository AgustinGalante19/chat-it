{
  "compilerOptions": {
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true
  },
  "include": ["./"],
  "exclude": ["node_modules"]
}
